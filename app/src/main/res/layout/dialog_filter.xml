<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialog.FilterDialogFragment"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/line_filter">

        <RelativeLayout
            android:id="@+id/filter_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="지역"
                android:id="@+id/textView" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/filter_layout1">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filter_layout2">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_layout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filter_layout3">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_layout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filter_layout4">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_layout6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filter_layout5">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_layout7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filter_layout6">

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>